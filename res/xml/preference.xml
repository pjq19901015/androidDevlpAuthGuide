<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory 
        android:title="我的位置源">
        <CheckBoxPreference
            android:title="使用无线网络"
            android:summary="使用无线网络查看应用程序"
            android:key="wifi"/>
        <CheckBoxPreference
            android:title="启用GPS卫星设置"
            android:summary="定位时精确到街道级别"
            android:key="gps"/>
        
    </PreferenceCategory>
    
    <PreferenceCategory 
        android:title="个人信息设置">
        <CheckBoxPreference 
            android:title="是否保存个人信息"
            android:key="is_save_Indivualmessage"/>
        <EditTextPreference 
            android:title="姓名"
            android:key="name"
            android:enabled="false"/>
        <PreferenceScreen 
            android:title="其它个人信息"
            android:summary="是否工作、手机">
            <CheckBoxPreference
                android:title="是否工作"/>
            <EditTextPreference 
                android:title="手机"
                android:summary="请输入真实的手机号"/>
        </PreferenceScreen>
    </PreferenceCategory>
</PreferenceScreen>